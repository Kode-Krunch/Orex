import {
  Button,
  Input,
  FormContainer,
  Card,
  Drawer,
  DatePicker,
  InputGroup,
  Tooltip,
} from 'components/ui';
import { Form, Formik } from 'formik';
import * as Yup from 'yup';
import {
  PostContent,
  PutContent,
  apiGetContentTypemaster,
  apiGetfpcorgrepmaster,
  PostFPC,
  apisendnotification,
} from 'services/ProgrammingService';
import { useDispatch, useSelector } from 'react-redux';
import { HiBackspace } from 'react-icons/hi';
import React, { useState, useEffect, useRef } from 'react';
import { Link, useLocation, useNavigate } from 'react-router-dom';
import { StickyFooter } from 'components/shared';
import FPCGrid from './FPCGrid';
import { AiOutlineSave } from 'react-icons/ai';
import './fpccomman.css';
import DrawerFooter from 'views/Controls/DrawerFooter';
import { MultiSelect } from 'primereact/multiselect';
import {
  convertDateFormatyyyyMMdd,
  openNotification,
} from 'views/Controls/GLOBALFUNACTION';
import Loader from 'views/Controls/Loader';
import { IoIosArrowBack, IoIosArrowForward } from 'react-icons/io';
import { setdateForm } from 'store/locale/localeSlice';
import { isScheduleAllowedToEditFn } from 'views/Scheduling/Scheduler/components/SchedulingArea/utils/utils';
import { CLIENT } from 'views/Controls/clientListEnum';

const validationSchema = Yup.object().shape({
  ContentName: Yup.string()
    .min(3, 'Too Short!')
    .max(50, 'Too Long!')
    .required('ContentName Required'),
  ShortName: Yup.string()
    .min(1, 'Too Short!')
    .max(200, 'Too Long!')
    .required('ShortName Required'),

  ContentTypeCode: Yup.string()
    .min(1, 'Too Short!')
    .max(50, 'Too Long!')
    .required('ContentType Required'),
  Audience: Yup.string().required('Audience Required'),
  ClassificationCode: Yup.string()
    .min(3, 'Too Short!')
    .max(50, 'Too Long!')
    .required('ClassificationCode Required'),
  LanguageCode: Yup.string()
    .min(1, 'Too Short!')
    .max(200, 'Too Long!')
    .required('LanguageCode Required'),
  FPCReleaseDate: Yup.string()
    .min(3, 'Too Short!')
    .max(200, 'Too Long!')
    .required('FPCReleaseDate Required'),
  SlotDuration: Yup.string()
    .min(1, 'Too Short!')
    .max(50, 'Too Long!')
    .required('SlotDuration Required'),

  CensorshipCode: Yup.string()
    .min(1, 'Too Short!')
    .max(200, 'Too Long!')
    .required('CensorshipCode Required'),

  IsActive: Yup.string().required('IsActives Required'),
  rememberMe: Yup.bool(),
});

const FPCEdit = () => {
  const navigate = useNavigate();
  const dispatch = useDispatch();
  const Channel = useSelector((state) => state.locale.selectedChannel);

  const [isShowLoader, setIsShowLoader] = useState(false);
  const [vTelecastDate, setvTelecastDate] = useState();
  const location = useLocation();
  const queryParams = new URLSearchParams(location.search);
  const channelParam = queryParams.get('chl');
  const objChannel = JSON.parse(decodeURIComponent(channelParam));
  useEffect(() => {
    dispatch(
      setdateForm([
        vTelecastDate,
        Channel.label == CLIENT.USA_Forbes ? 'Playlist Template' : 'FPC Master',
      ]),
    );
    const gboxElement = document.getElementsByClassName('Gbox2')[0];
    const gboxElementchild =
      document.getElementsByClassName('Gbox2')[0].children[1];

    if (gboxElement) {
      gboxElement.style.display = 'block';
      gboxElementchild.style.display = 'block';
    } // Optionally, you might want to revert the change when the component unmounts
    return () => {
      if (gboxElement) {
        gboxElement.style.display = 'none';
        gboxElementchild.style.display = 'none';
      }
    };
  }, [vTelecastDate]);
  useEffect(() => {
    dispatch(
      setdateForm([
        vTelecastDate,
        Channel.label == CLIENT.USA_Forbes ? 'Playlist Template' : 'FPC Master',
      ]),
    );
    const gboxElement = document.getElementsByClassName('Gbox2')[0];
    const gboxElementchild =
      document.getElementsByClassName('Gbox2')[0].children[1];

    if (gboxElement) {
      gboxElement.style.display = 'block';
      gboxElementchild.style.display = 'block';
    }
    return () => {
      if (gboxElement) {
        gboxElement.style.display = 'none';
        gboxElementchild.style.display = 'none';
      }
    };
  }, [location]);

  useEffect(() => {
    if (objChannel.objChannel.ChannelCode == Channel.ChannelCode) {
    } else {
      navigate(
        Channel.label == CLIENT.USA_Forbes ? '/fpcmasterNew' : '/FPCmaster',
      );
    }
  }, [Channel]);
  let SelTelecastDate = queryParams.get('dt');
  var formattedDate = '';
  if (SelTelecastDate) {
    const dateObject = new Date(SelTelecastDate);
    const day = dateObject.toLocaleDateString('en-GB', { day: '2-digit' });
    const month = dateObject.toLocaleDateString('en-GB', { month: 'short' });
    const year = dateObject.toLocaleDateString('en-GB', { year: 'numeric' });
    formattedDate = `${day}-${month}-${year}`;
    //setvTelecastDate(convertDateFormatyyyyMMdd(new Date(SelTelecastDate)))
  }
  const handleDateChange = (date) => {
    console.log('handleDateChange', date);
    setvTelecastDate(date);
  };

  useEffect(() => {
    setvTelecastDate(SelTelecastDate);
  }, []);

  const token = useSelector((state) => state.auth.session.token);
  const { state } = useLocation();

  const [contenttype, setcontenttype] = useState({
    value: '',
    label: '',
  });
  const [orgrep, setorgrep] = useState({
    value: '',
    label: '',
  });
  const [selectedContenttype, setSelectedContenttype] = useState(null);

  const customStyles = {
    control: (base) => ({
      ...base,
      minHeight: '10px', // Adjust the height as needed
    }),
  };
  const formikRef = useRef();
  const formSubmit = () => {
    formikRef.current?.submitForm();
  };
  const AddContent = async (values, token) => {
    try {
      const resp = await PostContent(values, token);
      if (resp.data.msg === 'success') {
        // setlog('success')
        // setMessage('Data Inserted Successfully.')
        return;
      } else if (resp.data.msg === 'Server Error.') {
        // setlog('error')
        // setMessage('Server Error.')
        return;
      }
    } catch (errors) {
      return {};
    }
  };

  const EditContent = async (values, token) => {
    try {
      const resp = await PutContent(values, token);
      console.log(resp);
      if (resp.data.msg === 'Updated') {
        // setlog('success')
        // setMessage('Data Updated Successfully')
        return;
      } else if (resp.data.msg === 'Entity is Already Exists') {
        // setlog('warning')
        // setMessage(resp.data.msg)
        return;
      }
    } catch (errors) {
      return {};
    }
  };

  const [isOpen, setdrwaerIsOpen] = useState(false);
  const [FCPSaveDt, setFCPSaveDt] = useState([]);
  const [isFPCAllowedToEdit, setIsFPCAllowedToEdit] = useState(null);

  useEffect(() => {
    // console.log('FCPSaveDt', FCPSaveDt)
  }, [FCPSaveDt]);

  const onDrawerClose = (e) => {
    // console.log('onDrawerClose', e)
    setdrwaerIsOpen(false);
  };

  useEffect(() => {
    // console.log('apiGetContentTypemaster:')

    (async (values) => {
      const resp = await apiGetContentTypemaster(values);
      const formattedOptions = resp.data.map((option) => ({
        value: option.ContentTypeCode,
        label: option.ContentTypeName,
      }));
      setcontenttype(formattedOptions);
    })();
    (async (values) => {
      const resp = await apiGetfpcorgrepmaster(values);
      const formattedOptions = resp.data.map((option) => ({
        value: option.OriginalRepeatCode,
        label: option.OriginalRepeatName,
      }));
      setorgrep(formattedOptions);
    })();
  }, []);

  useEffect(() => {
    (async () => {
      if (!vTelecastDate || !Channel || !token) return;
      setIsFPCAllowedToEdit(
        await isScheduleAllowedToEditFn(
          new Date(vTelecastDate),
          Channel,
          token,
        ),
      );
    })();
  }, [vTelecastDate, Channel, token]);

  const Username = useSelector((state) => state.auth.session.Username);
  const Usernamep = useSelector((state) => state.auth.session);
  const handleSaveClick = async () => {
    try {
      console.log('FCPSaveDt', FCPSaveDt);
      if (FCPSaveDt.length == 0) {
        openNotification('info', 'Kindly Add atleast single row to save data.');
        return;
      }

      setIsShowLoader(true);
      const Savefpc = FCPSaveDt.map((item) => ({
        ...item,
        SlotDuration: `${item.SlotDuration}`, // Convert SlotDuration to a string
      }));

      const response = await PostFPC(Savefpc);
      openNotification('success', 'FPC Saved successfully');
      console.log(Usernamep);

      const respsend = await apisendnotification({
        NotificationId: (Math.random() + 1).toString(36).substring(7),
        user_ids: [64],
        message: new Date(formattedDate)?.toDateString() + ' FPC CREATED',
        image: '',
        type: '1',
        location: 'FPC CREATED',
        locationLabel: Username,
        Status: '1',
        isGroup: 1,
        Ispriority: 1,
        readed: 0,
      });
      console.log(respsend);
      setIsShowLoader(false);
    } catch (error) {
      console.error(error);
    }
  };

  return (
    <div>
      <Formik
        initialValues={{
          ContentCode: state?.editData.ContentCode || '',
          ContentName: state?.editData.ContentName || '',
          ShortName: state?.editData.ShortName || '',
          ERPCode: state?.editData.ERPCode || '',
          ContentTypeCode: state?.editData.ContentType?.ContentTypeCode || '',
          LanguageCode: state?.editData.Language?.LanguageCode || '',
          ClassificationCode:
            state?.editData.Classification?.ClassificationCode || '',
          FPCReleaseDate: state?.editData.FPCReleaseDate?.FPCReleaseDate || '',
          SlotDuration: state?.editData.SlotDuration || '',
          GenreCode: state?.editData.Genre?.GenreCode || '',
          SubGenreCode: state?.editData.SubGenre?.SubGenreCode || '',

          CensorshipCode: state?.editData.Censorship?.CensorshipCode || '',
          TxMasterCode: state?.editData.TxMasterCode || '',

          IsActive: state?.editData.IsActive === 1 ? true : false,
        }}
        validationSchema={validationSchema}
        onSubmit={(values, { resetForm, setSubmitting }) => {
          setTimeout(() => {
            // alert('hh');
            if (!state?.editData.ContentCode) {
              new Promise((resolve, reject) => {
                AddContent(values, token)
                  .then((response) => {
                    // onDrawerClose(0, 0)
                    resolve(response);
                  })
                  .catch((errors) => {
                    reject(errors);
                  });
              });
            } else {
              new Promise((resolve, reject) => {
                setSubmitting(false);
                EditContent(values, token)
                  .then((response) => {
                    // onDrawerClose(0, 0)
                    resolve(response);
                  })
                  .catch((errors) => {
                    reject(errors);
                  });
              });
            }

            resetForm();
          }, 400);
        }}
      >
        {({ values, touched, errors }) => (
          <Card bodyClass="text-center">
            <div className="flex justify-end items-center">
              <p className="text-gray-300 font-normal mr-2">Telecast Date</p>
              <div className="flex gap-2 items-center">
                <div>
                  <DatePicker
                    placeholder="Select"
                    value={vTelecastDate || new Date(formattedDate)}
                    size="sm"
                    inputFormat="DD/MM/YYYY"
                    clearable={false}
                    className="my-1"
                    onChange={handleDateChange}
                  />
                </div>
                <InputGroup>
                  <Tooltip title="Prev Date">
                    <Button
                      icon={<IoIosArrowBack />}
                      size="sm"
                      shape="none"
                      className="!rounded-l-lg"
                      onClick={() => {
                        setvTelecastDate((oldState) => {
                          // Ensure oldState is a valid Date object
                          const currentDate =
                            oldState instanceof Date
                              ? oldState
                              : new Date(vTelecastDate);
                          // Return a new Date object with one day subtracted
                          return new Date(
                            currentDate.getTime() - 24 * 60 * 60 * 1000,
                          );
                        });
                      }}
                    />
                  </Tooltip>
                  <Tooltip title="Next Date">
                    <Button
                      icon={<IoIosArrowForward />}
                      size="sm"
                      shape="none"
                      className="!rounded-r-lg"
                      onClick={() => {
                        setvTelecastDate((oldState) => {
                          // Ensure oldState is a valid Date object
                          const currentDate =
                            oldState instanceof Date
                              ? oldState
                              : new Date(vTelecastDate);
                          // Return a new Date object with one day added
                          return new Date(
                            currentDate.getTime() + 24 * 60 * 60 * 1000,
                          );
                        });
                      }}
                    />
                  </Tooltip>
                </InputGroup>
              </div>
            </div>
            <Form>
              <FormContainer className="pt-0">
                <div className="grid grid-cols-6 md:grid-cols-6 gap-1 ">
                  <div className="col-span-6 ">
                    {vTelecastDate && (
                      <FPCGrid
                        objChannel={objChannel.objChannel}
                        SelectedDate={convertDateFormatyyyyMMdd(vTelecastDate)}
                        setFCPSaveDt={setFCPSaveDt}
                        isFPCAllowedToEdit={isFPCAllowedToEdit}
                      ></FPCGrid>
                    )}
                  </div>
                </div>
                <br />
                <br />
                <br />
                <br />
                <br />

                <StickyFooter
                  className="-mx-8 px-8 flex items-center justify-between py-4"
                  stickyClass="border-t bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700"
                >
                  <div className="md:flex items-center flex">
                    <Link to={'/FPCmaster'}>
                      <Button
                        className="mr-2"
                        variant=""
                        size="sm"
                        icon={<HiBackspace />}
                      >
                        Back
                      </Button>
                    </Link>
                    <Button
                      size="sm"
                      variant="solid"
                      onClick={handleSaveClick}
                      // loading={isSubmitting}
                      disabled={!isFPCAllowedToEdit}
                      icon={<AiOutlineSave />}
                      type="submit"
                    >
                      Save
                    </Button>
                    {!isFPCAllowedToEdit && (
                      <p className="ml-2 text-red-500">
                        Backdated FPCs are non-editable
                      </p>
                    )}
                  </div>
                </StickyFooter>
              </FormContainer>
            </Form>
          </Card>
        )}
      </Formik>
      <Drawer
        title="Filter"
        isOpen={isOpen}
        onClose={onDrawerClose}
        onRequestClose={onDrawerClose}
        footer={
          <DrawerFooter
            onCancel={onDrawerClose}
            onSaveClick={formSubmit}
            BtnSaveTxt="Apply"
            ref={formikRef}
          />
        }
      >
        <Card>
          <div className="col-span-4 mb-1">
            <p>Content/House ID</p>
          </div>
          <div>
            <Input size="sm" placeholder="Search By Content" />
          </div>

          <div className="col-span-4 mt-1 mb-1">
            <p>Search By Content Type</p>
          </div>
          <MultiSelect
            value={selectedContenttype}
            onChange={(e) => setSelectedContenttype(e.value)}
            options={contenttype}
            optionLabel="label"
            filter
            placeholder="Select Content Type"
            maxSelectedLabels={3}
            className="w-full md:w-20rem"
            styles={customStyles}
          />
        </Card>
        <br></br>
      </Drawer>
      <Loader showLoader={isShowLoader} />
    </div>
  );
};

export default FPCEdit;
