@import url('https://fonts.googleapis.com/css?family=Roboto');

.root-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow-y: hidden;
}

.root-container > :first-child {
  flex-grow: 1;
}

.table {
  height: 100%;
}

.table-body {
  display: block;
  overflow-y: hidden;
  height: 100%;
}

.table-body:hover {
  overflow-y: auto;
}

.table-head-row {
  display: table;
  width: 100%;
  table-layout: fixed;
  color: whitesmoke;
}

.table-body-row {
  display: table;
  width: 100%;
  table-layout: fixed;
  color: whitesmoke;
}

.table-head-cell {
  padding-block: 0.3rem;
  text-transform: capitalize;
  display: flex;
  align-items: center;
  gap: 0.1rem;
}

.table-body-cell {
  padding-block: 0.3rem;
}

.cell-border {
  border: 0.04px solid #4b5563;
}
