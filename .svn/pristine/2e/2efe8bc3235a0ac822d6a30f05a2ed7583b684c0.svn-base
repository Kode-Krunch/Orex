import { Container } from 'components/shared';
import { Avatar, Card } from 'components/ui';
import React, { useEffect, useState } from 'react';
import { formatDateYMD } from 'views/Programming/general';
import { format } from 'date-fns';
import { apiGetNotifications } from 'services/MasterService';
import { useDispatch, useSelector } from 'react-redux';
import Loader from 'views/Controls/Loader';
import { HiOutlineBell } from 'react-icons/hi';
import { openNotification } from './GLOBALFUNACTION';
import { apiGetMarkNotifAsRead } from 'services/ProgrammingService';
import { setNodeJsNotifications } from 'store/locale/localeSlice';

const NodeJsActivityLog = () => {
  /* REDUX */
  const nodeJsNotifications = useSelector(
    (state) => state.locale.nodeJsNotifications,
  );
  const dispatch = useDispatch();

  /* STATES */
  const [loading, setloading] = useState(false);
  const [dateWiseNotifications, setDateWiseNotifications] = useState([]);

  /* USE EFFECTS */
  useEffect(() => {
    (async () => {
      let responseData = [];
      try {
        setloading(true);
        const response = await apiGetNotifications();
        if (response.status === 200) responseData = response.data.data;
        else throw new Error(response);
      } catch (error) {
        console.error(error);
        openNotification(
          'danger',
          'Something went wrong while fetching activity log',
        );
      } finally {
        dispatch(setNodeJsNotifications(responseData));
        setloading(false);
      }
    })();
  }, [dispatch]);

  useEffect(() => {
    (async () => {
      try {
        setDateWiseNotifications(getDateWiseNotifications(nodeJsNotifications));
        await apiGetMarkNotifAsRead();
      } catch (error) {
        console.error(error);
        openNotification(
          'danger',
          'Something went wrong while fetching activity log',
        );
      }
    })();
  }, [nodeJsNotifications]);

  /* HELPER FUNCTIONS */
  const getDateWiseNotifications = (notifications) => {
    const groupedNotifications = {};
    try {
      notifications.forEach((notification) => {
        const date = notification.createdAt.split('T')[0];
        if (date in groupedNotifications) {
          groupedNotifications[date].push(notification);
        } else {
          groupedNotifications[date] = [notification];
        }
      });
    } catch (error) {
      console.error(error);
    } finally {
      return groupedNotifications;
    }
  };

  console.log('dateWiseNotifications', dateWiseNotifications);

  return (
    <Container>
      <Loader showLoader={loading} />
      <div className="grid grid-cols-5">
        <Card className="col-span-3">
          <h4 className="mb-6">Activity Log</h4>
          <div className="max-h-[90vh] overflow-y-auto pr-3 flex flex-col">
            {Object.keys(dateWiseNotifications).map((date, index) => {
              return (
                <div className="flex flex-col">
                  <div
                    className={`font-semibold uppercase text-[0.95rem] text-gray-300 sticky -top-px bg-gray-800 z-10 pb-3 ${index !== 0 && 'mt-6'
                      }`}
                  >
                    {formatDateYMD(date)}
                  </div>
                  {dateWiseNotifications[date].map((notification, index) => (
                    <div
                      className={`flex gap-4 ${index === 0 ? 'pt-2' : 'pt-5'
                        } pb-4 border-b border-b-gray-700`}
                    >
                      <Avatar shape="circle" icon={<HiOutlineBell />} />
                      <div className="flex flex-col gap-2 w-full">
                        <div className="flex justify-between items-center">
                          <p className="font-semibold text-base text-gray-300">
                            {notification.notification_metadata.locationLabel}
                          </p>
                          <p className="text-xs">
                            {format(
                              new Date(notification.createdAt),
                              'hh:mm a',
                            )}
                          </p>
                        </div>
                        <p>{notification.message}</p>
                      </div>
                    </div>
                  ))}
                </div>
              );
            })}
          </div>
        </Card>
      </div>
    </Container>
  );
};

export default NodeJsActivityLog;
