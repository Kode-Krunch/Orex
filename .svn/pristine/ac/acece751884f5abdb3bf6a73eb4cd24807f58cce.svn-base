import { Button, Tooltip } from 'components/ui'
import { useFormikContext } from 'formik';
import React from 'react'
import { agencyDetailsTooltip, isAgencyDetailsValid } from '../utils';

function Footer({ step, setStep, className }) {
    /* HOOKS */
    const { values, errors } = useFormikContext();

    /* EVENT HANDLERS */
    const handlePrevClick = () => setStep((prev) => prev - 1);

    const handleNextClick = () => setStep((prev) => prev + 1)

    /* CONSTANTS */
    const IS_SUBMIT_BTN_DISABLED = step === 0 ? !isAgencyDetailsValid(values, errors) : false

    const NEXT_BTN_TOOLTIP = step === 0 ? agencyDetailsTooltip(values, errors) : false

    return (
        <div className={`flex justify-end gap-3 ${className}`}>
            <Button disabled={step === 0} onClick={handlePrevClick}>Previous</Button>
            {NEXT_BTN_TOOLTIP ?
                <Tooltip title={NEXT_BTN_TOOLTIP}>
                    <Button variant="solid" disabled={IS_SUBMIT_BTN_DISABLED} onClick={handleNextClick}>Next</Button>
                </Tooltip>
                : <Button variant="solid" disabled={IS_SUBMIT_BTN_DISABLED} onClick={handleNextClick}>Next</Button>}
        </div>
    )
}

export default Footer