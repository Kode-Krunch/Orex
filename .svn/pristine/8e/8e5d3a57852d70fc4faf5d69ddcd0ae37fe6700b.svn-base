import classNames from 'classnames';
import { Button } from 'components/ui';
import React from 'react';
import { FaChevronRight } from 'react-icons/fa';
import { MdEdit } from 'react-icons/md';

function TreeItem({ item, active, color = 'gray', icon, edit }) {
  return (
    <div
      className={classNames(
        `p-3 rounded-lg hover:bg-${color}-500 hover:cursor-pointer border hover:border-${color}-400 transition-all flex justify-between items-center`,
        active
          ? `bg-${color}-600 bg-opacity-80 border-${color}-400`
          : `bg-${color}-600 bg-opacity-20 border-none`,
      )}
    >
      <div className="flex items-center gap-3">
        {icon}
        <p className="text-white font-semibold">{item.name}</p>
      </div>
      {edit ? (
        <Button shape="circle" size="xs" icon={<MdEdit />} />
      ) : active ? (
        <FaChevronRight className="text-white" />
      ) : (
        <></>
      )}
    </div>
  );
}

export default TreeItem;
