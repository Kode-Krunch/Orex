import { AdaptableCard, Container } from 'components/shared';
import { Avatar, Card } from 'components/ui';
import React, { useEffect, useState } from 'react';
import { formatDateYMD } from 'views/Programming/general';
import { format } from 'date-fns';
import { apiGetNotification } from 'services/MasterService';
import { useSelector } from 'react-redux';
import Loader from 'views/Controls/Loader';
import { HiOutlineBell } from 'react-icons/hi';

const ActiveLog = () => {
  const [loading, setloading] = useState(false);
  const [dateWiseNotifications, setDateWiseNotifications] = useState([]);
  const LoginId = useSelector((state) => state.auth.session.LoginId);

  useEffect(() => {
    (async (values) => {
      setloading(true);
      const resp = await apiGetNotification(LoginId);
      setloading(false);
      setDateWiseNotifications(getDateWiseNotificaitons(resp.data.data));
    })();
  }, []);

  /* HELPER FUNCTIONS */
  const getDateWiseNotificaitons = (notifications) => {
    try {
      const groupedNotifications = {};
      notifications.forEach((notification) => {
        const date = notification.NotificationDate.split('T')[0];
        if (date in groupedNotifications) {
          groupedNotifications[date].push(notification);
        } else {
          groupedNotifications[date] = [notification];
        }
      });
      return groupedNotifications;
    } catch (error) {
      console.error(error);
    }
  };

  return (
    <Container>
      <Loader showLoader={loading} />
      <div className="grid grid-cols-5">
        <Card className="col-span-3">
          <h4 className="mb-6">Activity Log</h4>
          <div className="max-h-[90vh] overflow-y-auto pr-3 flex flex-col">
            {Object.keys(dateWiseNotifications).map((date, index) => {
              return (
                <div className="flex flex-col">
                  <div
                    className={`font-semibold uppercase text-[0.95rem] text-gray-300 sticky -top-px bg-gray-800 z-10 pb-3 ${
                      index !== 0 && 'mt-6'
                    }`}
                  >
                    {formatDateYMD(date)}
                  </div>
                  {dateWiseNotifications[date].map((notification, index) => (
                    <div
                      className={`flex gap-4 ${
                        index === 0 ? 'pt-2' : 'pt-5'
                      } pb-4 border-b border-b-gray-700`}
                    >
                      <Avatar shape="circle" icon={<HiOutlineBell />} />
                      <div className="flex flex-col gap-2 w-full">
                        <div className="flex justify-between items-center">
                          <p className="font-semibold text-base text-gray-300">
                            {notification.locationLabel}
                          </p>
                          <p className="text-xs">
                            {format(
                              new Date(notification.NotificationDate),
                              'hh:mm a',
                            )}
                          </p>
                        </div>
                        <p>{notification.message}</p>
                      </div>
                    </div>
                  ))}
                </div>
              );
            })}
          </div>
        </Card>
      </div>
    </Container>
  );
};

export default ActiveLog;
