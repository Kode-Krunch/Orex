import { Button, Dialog } from 'components/ui';
import DatePickerRange from 'components/ui/DatePicker/DatePickerRange';
import { convertDateToYMD } from 'components/validators';
import React, { useContext, useState } from 'react';
import { AiOutlineSave } from 'react-icons/ai';
import { useSelector } from 'react-redux';
import { apiCallstoreprocedure } from 'services/CommonService';
import {
  formatDateToDDMMMYYYY,
  openNotification,
} from 'views/Controls/GLOBALFUNACTION';
import SchedulerContext from 'views/Scheduling/SchedulerOld/context/SchedulerContext';
// import SchedulerContext from 'views/Scheduling/Scheduler/context/SchedulerContext';

const dateFormat = 'DD MMM YYYY';
const DayWiseSaveAs = ({ saveAsvisible, setSaveAsvisible }) => {
  const { schedulingTableData, date } = useContext(SchedulerContext);
  const channel = useSelector((state) => state.locale.selectedChannel);

  const [startDate, setStartDate] = useState(new Date());
  const [endDate, setEndDate] = useState(new Date());
  const [confirmationPopup, setconfirmationPopup] = useState(false);

  const handleDateChange = (newDates) => {
    const [newStartDate, newEndDate] = newDates;
    setStartDate(newStartDate);
    setEndDate(newEndDate);
  };

  const handleSaveASFPC = async () => {
    try {
      const resp = await apiCallstoreprocedure(
        'USP_SCH_SAVEAS_PromoScheduling',
        {
          par_LocationCode: channel.LocationCode,
          par_Channelcode: channel.ChannelCode,
          OriginalDate: convertDateToYMD(date),
          FromDate: convertDateToYMD(startDate),
          ToDate: convertDateToYMD(endDate),
        },

      );
      console.log(resp);
      if (resp.status == 204) {
        openNotification('warning', 'Contact Bats team');
      } else if (resp.status == 200) {
        openNotification('success', 'Save Successfully');
        setSaveAsvisible(false);
        setconfirmationPopup(false);
      }
    } catch (error) {
      openNotification('danger', 'Server Error');
    }
  };
  return (
    <>
      <Dialog
        width={600}
        isOpen={saveAsvisible}
        onClose={() => setSaveAsvisible(false)}
      >
        <h3 className="mb-5"> SaveAs Date Wise</h3>
        <div className="grid grid-cols-6 md:grid-cols-6 gap-1">
          <div className="col-span-6">
            <label>Date Range</label>
          </div>
          <div className="col-span-6">
            <DatePickerRange
              minDate={new Date()}
              value={[startDate, endDate]}
              onChange={handleDateChange}
              inputFormat={dateFormat}
              size="sm"
            />
          </div>
        </div>
        <div className="mt-5">
          <Button
            variant="solid"
            type="button"
            className="btnEdit"
            size="sm"
            icon={<AiOutlineSave />}
            onClick={() => {
              if (startDate && endDate) {
                setconfirmationPopup(true);
              } else {
                openNotification('warning', 'Please Select Date');
              }
            }}
          >
            Save
          </Button>
        </div>
      </Dialog>
      <Dialog
        isOpen={confirmationPopup}
        onClose={() => setconfirmationPopup(false)}
        onRequestClose={() => setconfirmationPopup(false)}
      >
        <h5 className="mb-4">Confirm?</h5>
        <p>
          Are you sure want to Save As FPC for{' '}
          {formatDateToDDMMMYYYY(startDate)} to {formatDateToDDMMMYYYY(endDate)}{' '}
          ?
        </p>
        <div className="text-right mt-6">
          <Button
            onClick={() => setconfirmationPopup(false)}
            size="sm"
            className="mr-2"
          >
            No
          </Button>

          <Button variant="solid" onClick={handleSaveASFPC} size="sm">
            Yes
          </Button>
        </div>
      </Dialog>
    </>
  );
};

export default DayWiseSaveAs;
